              </x:element>
              <x:element name="list" minOccurs="1" maxOccurs="1">
                <x:complexType>
                  <x:sequence>
                    <x:element name="device" minOccurs="0" maxOccurs="unbounded">
                      <x:complexType>
                        <x:sequence>
