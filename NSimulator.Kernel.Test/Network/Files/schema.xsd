                          <x:any processContents="skip" minOccurs="0" maxOccurs="unbounded" />
                        </x:sequence>
                        <x:attributeGroup ref="entity_attrs" />
                      </x:complexType>
                    </x:element>
                  </x:sequence>
                </x:complexType>
                <x:unique name="interface_id_must_be_unique">
                  <x:selector xpath="interface" />
                  <x:field xpath="@id" />
